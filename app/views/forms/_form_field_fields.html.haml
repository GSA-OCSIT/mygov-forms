.nested-fields
  = f.inputs do
    = f.input :label
    = f.input :description, :required => false, :as => :string
    = f.input :is_required, :label => "Required", :as => :boolean
    = f.input :field_type, :as => :select, :collection => form_input_types
    = f.input :options, :as => :string
    = link_to_remove_association "[Trash Icon]", f